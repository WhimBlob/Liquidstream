<!DOCTYPE html>
<html>
  <head>
    <title><%= title %></title>
    <link rel='stylesheet' href='/stylesheets/style.css' />
  </head>
  <body>
    <h1><%= title %></h1>
    <p>Welcome to <%= title %></p>
    <!-- WRAPPER -->
    <div id="wrapper">
      <!-- USER INFO -->
      <div id = "userInfo">
        <h2 id = "User Info"></h2>
        <p>
          <strong>Name:</strong>
          <span id='userInfoName'></span>
          <br>
          <strong>Mdp:</strong>
          <span id='userInfoMdp'></span>
          <br>
          <strong>Gender:</strong>
          <span id='userInfoGender'></span>
          <br>
          <strong>Location:</strong>
          <span id='userInfoLocation'></span>
        </p>
      </div>
      <!-- /USER INFO -->
      <!-- USER LIST -->
      <h2>User List</h2>
      <div id="userList">
        <table>
          <thead>
            <th>UserName</th>
            <th>Email</th>
            <th>Delete?</th>
          </thead>
          <tbody>
          </tbody>
        </table>
      </div>
      <!-- /USER LIST -->
      <!-- ADD USER -->
      <h2>Add User</h2>
      <div id="addUser"></div>
        <form method = "POST">
          <input id = "inputUserName" type ="text" placeholder = "Username" name = "userName">
          <input id = "inputUserMdp" type ="password" placeholder = "Mot de passe" name = "userMdp">
          <br>
          <input id = "inputUserFullname" type ="text" placeholder = "Full Name">
          <input id = "inputUserEmail" type ="text" placeholder = "Email">
          <br>
          <input id = "inputUserLocation" type ="text" placeholder = "Location">
          <input id = "inputUserGender" type ="text" placeholder = "Gender">
          <br>
          <button id = "btnAddUser">Add User</button>
        </form>
      <!-- /ADD USER -->
    </div>
    <!-- /WRAPPER -->
  </body>
  <script src="/javascripts/global.js" />
</html>